<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Drawer-->
    <style name="FluentUI.Drawer" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/FluentUI.Drawer.Animation</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="FluentUI.Drawer.Animation">
        <item name="android:windowEnterAnimation">@anim/fluent_ui_drawer_background_fade_in</item>
        <item name="android:windowExitAnimation">@anim/fluent_ui_drawer_background_fade_out</item>
    </style>
</resources>
